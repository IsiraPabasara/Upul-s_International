# Build the docker image with `npx nx docker:build @upul-ecom/api`.
# Tip: Modify "docker:build" options in project.json to change docker build args.
#
# Run the container with `nx docker:run @upul-ecom/api -p 3000:3000`.
#
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

COPY dist .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.

RUN npm ci --omit=dev

# Generate Prisma Client
RUN npm exec prisma@6.19 -- generate --schema=./prisma/schema.prisma

# Clean up npm cache and temporary files
RUN npm cache clean --force && \
    rm -rf /tmp/* /var/cache/apk/*

CMD [ "node", "main.js" ]


