
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Address {
  id           String   @default(uuid()) 
  firstname    String
  lastname     String
  addressLine  String
  apartment    String?  
  city         String
  postalCode   String
  phoneNumber  String
  isDefault    Boolean  @default(false)
}

model users {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  firstname   String
  lastname    String
  email       String      @unique
  phonenumber String      @unique
  password    String?
  role        String        @default("user")

  addresses    Address[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
  
model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  sku          String   @unique
  description  String
  price        Float   
  stock        Int
  availability Boolean  @default(true)
  brand        String
  
  photos       String[]
  colors       String[]

  size         String?  
  waistSize    Int?
  shoeSize     Int?
  collarSize   Float?
  vestSize     String?
  bustSize     Int?
  braSize      String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}